@page "/"
@using System.Collections

@code {
    public List<ServicesDTO> Services { get; set; } = new();

    public class ServicesDTO
    {
        public bool IsActive { get; set; }
        public Guid Id { get; set; }
        public string IconUrl { get; set; }
        public string Title { get; set; }
        public string Description { get; set; }
        public List<string> Features { get; set; }
        public string CtaText { get; set; }
    }

    protected override void OnInitialized()
    {
        Services = GetServices();
        base.OnInitialized();
    }

    public static List<ServicesDTO> GetServices()
    {
        return new List<ServicesDTO>
        {
            new ServicesDTO
            {
                Id = Guid.NewGuid(),
                IsActive = true,
                IconUrl = "/icons/client-acquisition.svg",
                Title = "Client Acquisition Systems",
                Description = "Complete client acquisition infrastructure with 4 booking channels for predictable and consistent growth.",
                Features = new List<string>
                {
                    "4 appointment booking channels setup",
                    "2-5+ appointments per day guarantee",
                    "System implementation and management",
                    "90-day performance monitoring",
                    "Lead generation metrics tracking"
                },
                CtaText = "Book Discovery Call"
            },
            new ServicesDTO
            {
                Id = Guid.NewGuid(),
                IsActive = true,
                IconUrl = "/icons/life-coaching.svg",
                Title = "Life Coaching Program",
                Description = "Transformative coaching program focused on achieving peace, contentment, and lifelong goals.",
                Features = new List<string>
                {
                    "Personalized SMART goal setting",
                    "Daily activity and emotion tracking",
                    "Emergency consultation access",
                    "Progress monitoring and achievement tracking",
                    "Customized exercise and wellness plans"
                },
                CtaText = "Start Your Journey"
            },
            new ServicesDTO
            {
                Id = Guid.NewGuid(),
                IsActive = true,
                IconUrl = "/icons/agency-services.svg",
                Title = "Lead Generation Agency",
                Description = "Comprehensive lead generation and client management solutions for sustained business growth.",
                Features = new List<string>
                {
                    "Performance metrics dashboard",
                    "Campaign creation and management",
                    "Contract management system",
                    "ROI analysis and reporting",
                    "Client database management"
                },
                CtaText = "Partner With Us"
            }
        };
    }

}

@* HeroSection.razor *@

<div class="hero-container bg-gradient-primary">
    <div class="hero-content">
        <div class="hero-text-wrapper">
            <h1 class="hero-headline">
                Unlock Your Full Potential
                <span class="accent-text">with Expert Coaching</span>
            </h1>
            <p class="hero-subheadline">
                Whether you're looking to enhance your singing, grow your business, or improve your life skills,
                GrowthFean connects you with expert coaches who can guide you every step of the way.
            </p>
            <div class="hero-actions">
                <button class="cta-primary">
                    Find Your Perfect Coach
                    <span class="oi oi-arrow-right"></span>
                </button>
                <button class="cta-secondary">
                    Get Started
                </button>
            </div>
        </div>
    </div>
    <div class="hero-arch"></div>
</div>
<div class="service-cards">
    @foreach (var service in Services)
    {
        <div class="service-card @(service.IsActive ? "active" : "")">
            <div class="card-content">
                <div class="service-header">
                    <span class="service-icon oi @service.IconUrl"></span>
                    <h2 class="service-title">@service.Title</h2>
                </div>
                <p class="service-description">@service.Description</p>
                <div class="service-features">
                    @foreach (var feature in service.Features)
                    {
                        <div class="feature-item">
                            <span class="oi oi-check feature-icon"></span>
                            <span>@feature</span>
                        </div>
                    }
                </div>
                <button class="service-cta button-text">
                    @service.CtaText
                    <span class="oi oi-arrow-right"></span>
                </button>
            </div>
        </div>
    }
</div>

