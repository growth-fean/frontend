<script>
    document.addEventListener("DOMContentLoaded", () => {
        const hero = document.querySelector('.hero');
        let colors = ['#6c63ff', '#3b3054', '#ff6584', '#ff3f61'];
        let index = 0;

        setInterval(() => {
            hero.style.background = `linear-gradient(135deg, ${colors[index]}, ${colors[(index + 1) % colors.length]})`;
            index = (index + 1) % colors.length;
        }, 5000);
    });
</script>